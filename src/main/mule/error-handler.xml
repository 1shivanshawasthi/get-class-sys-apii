	<error-handler name="error-handler" doc:id="b0edde4f-e24f-4421-8f07-fe09ac4e4748" >

            <on-error-propagate type="APIKIT:BAD_REQUEST">
			<ee:transform doc:name="Transform Message" doc:id="3f90e35c-6bdf-48be-95c3-7f5bbb8f0d6b" >
				<ee:message >
					<ee:set-payload ><![CDATA[%dw 2.0
output application/java
---
{
  "errorMessage": "Message is incorrect. Bad-Request",
  "statusCode": "400",
  "errorType": error.errorType
}]]></ee:set-payload>
				</ee:message>
			</ee:transform>
			<logger level="ERROR" doc:name="log-error" doc:id="f93be71b-1334-4d5b-9443-c57add0ce063" message="#[payload]"/>
            
</on-error-propagate>
